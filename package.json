{
  "name": "l1-transformer",
  "type": "commonjs",
  "version": "0.2.1",
  "description": "Builds transformer bundle into types and transformers",
  "homepage": "https://github.com/product-os/l1-transformer#readme",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/product-os/transformer-bundle2transformer.git"
  },
  "bugs": {
    "url": "https://github.com/product-os/transformer-bundle2transformer/issues"
  },
  "files": [
    "build/"
  ],
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc",
    "docker:build": "docker build -f Dockerfile -t l1-transformer:build .",
    "docker:build-test": "npm run docker:build && npm run docker:test",
    "docker:test": "docker run -it --rm --privileged --env ARTIFACT_PATH=/input/artifact --mount source=$(pwd)/test,target=/usr/src/l1-transformer/test,type=bind --mount source=$(pwd)/test/input,target=/input,type=bind l1-transformer:build npm run test",
    "lint": "balena-lint src",
    "lint:fix": "balena-lint --fix src",
    "test": "jest",
    "test:fast": "npm run build && npm run test",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@balena/jellyfish-types": "^2.0.5",
    "@balena/lint": "^6.2.0",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/json-schema": "^6.0.1",
    "@types/mustache": "^4.1.3",
    "@types/node": "^17.0.32",
    "husky": "^4.2.5",
    "jest": "^27.5.1",
    "lint-staged": "^11.2.6",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@balena/transformer-sdk": "^0.4.0",
    "js-yaml": "^4.1.0",
    "mustache": "^4.2.0",
    "rimraf": "^3.0.2",
    "skhema": "^6.0.6",
    "zx": "^4.3.0"
  },
  "versionist": {
    "publishedAt": "2022-07-29T06:27:31.937Z"
  }
}
